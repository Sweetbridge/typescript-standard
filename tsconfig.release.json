{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016"],
    "declaration": true,
    "module": "commonjs",
    "newLine": "LF",
    "removeComments": true,
    "experimentalDecorators": true,
    "outDir": "release",
    "pretty": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
