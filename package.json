{
  "name": "typescript-standard",
  "version": "0.2.3",
  "description": "Zero-configuration TypeScript Standard Validation",
  "main": "./bin",
  "bin": {
    "standard": "./bin/cmd"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:webpack",
    "build:clean": "rm -f ./bin/*.js",
    "build:webpack": "node_modules/.bin/webpack --display-error-details --config ./webpack.config.ts"
  },
  "files": [
    "bin/cli.js",
    "bin/index.js",
    "LICENSE",
    "README.md",
    "tslint.json"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/e2tox/typescript-standard.git"
  },
  "keywords": [
    "format",
    "pretty",
    "tslint",
    "typescript",
    "standard",
    "fmt",
    "ts"
  ],
  "author": {
    "name": "Ling Zhang",
    "email": "e2tox@live.com",
    "url": "http://e2.to/x"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/e2tox/typescript-standard/issues"
  },
  "homepage": "https://github.com/e2tox/typescript-standard",
  "devDependencies": {
    "@types/glob": "latest",
    "@types/node": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "webpack": "latest"
  },
  "dependencies": {
    "tslint": "latest",
    "typescript": "latest"
  }
}
